{
  "name": "ekill",
  "version": "1.5",
  "description": "Remove unwanted elements from a page quickly!",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {
      "16": "skull-and-bones-16.png",
      "48": "skull-and-bones-48.png",
      "128": "skull-and-bones-128.png"
    },
    "theme_icons": [{
      "light": "skull-and-bones-16-light.png",
      "dark": "skull-and-bones-16.png",
      "size": 16
    }, {
      "light": "skull-and-bones-48-light.png",
      "dark": "skull-and-bones-48.png",
      "size": 48
    }]
  },
  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true,
    "browser_style": false,
    "chrome_style": false
  },
  "applications": {
    "gecko": {
      "id": "git@ekill.com",
      "strict_min_version": "42.0"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/testable.js", "ekill.js"],
    "css": ["css/ekill.css"],
    "run_at": "document_end"
  }],
  "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'",
  "icons": {
    "16": "skull-and-bones-16.png",
    "48": "skull-and-bones-48.png",
    "128": "skull-and-bones-128.png"
  }
}
